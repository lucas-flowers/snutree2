
[MASTER]

load-plugins=pylint.extensions.broad_try_clause

[MESSAGES CONTROL]

enable=
    trailing-comma-tuple,
    useless-suppression,

disable=
    # Aesthetic
    no-else-return,
    no-else-raise,
    no-else-continue,
    misplaced-comparison-constant,
    # Noise
    too-few-public-methods,
    missing-docstring,
    fixme,
    # Mypy does it better without as many false positives
    typecheck,
    iterable_check,

[BASIC]

good-names-rgxs=
    ^[a-zA-Z]$,  # Too many exceptions
    ^[a-z]{2}$,  # Too many exceptions
    ^[A-Z]([a-z]+([A-Z][a-z]+)*)?_co(ntra)?$,  # https://www.python.org/dev/peps/pep-0008/#type-variable-names; https://github.com/PyCQA/pylint/issues/3401

[FORMAT]
max-line-length=140

[SIMILARITIES]
min-similarity-lines=15
